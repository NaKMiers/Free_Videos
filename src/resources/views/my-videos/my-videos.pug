extends ../layouts/main

block content
    h1 My Videos
    if user.myVideos.length > 0
        .row
            -var index = 0
            each myVideo in user.myVideos
                .col-sm-6.col-lg-3.mt-4
                    .card(style="height: 100%")
                        a.thumbnail-card(href='/my-videos/view/' + myVideo.slug, style="background-image: url('https://img.youtube.com/vi/" + myVideo.videoId + "/sddefault.jpg')")
                        .card-body
                            a(href='/my-videos/view/' + myVideo.slug)
                                h5.card-title(title= myVideo.title)= myVideo.title
                            p.card-description.card-text(title= myVideo.description)= myVideo.description
                            a.btn.btn-primary.float-right(href='/my-videos/remove/' + index) Remove
                            a.btn.btn-primary.text-light(href='/my-videos/view/' + myVideo.slug)= ++index
    else
        p.mt-4.text-center You haven't added any videos yet. 
            a(href="/") Return Home