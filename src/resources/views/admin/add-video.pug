extends ../layouts/main

block content
    h1 Add New Video
    a.float-right.mr-4(href="/admin/videos") Videos

    if isDuplicateVideo
        .alert.alert-danger(role='alert')
            = isDuplicateVideo

    form(method="POST")
        .form-group
            label.title-login(for='title') Title
            input#title.form-control(type='text', name="title", value= values ? values.title : '', placeholder='Enter title', required)
            span(style="color: #f44336")= errors ? errors[0] : '' 
        .form-group
            label.title-login(for='description') Description
            textarea#description.form-control(name="description", placeholder='Enter description', required)
                = value= values ? values.description : ''
            span(style="color: #f44336")= errors ? errors[1] : '' 
        .form-group
            label.title-login(for='videoId') Video ID
            input#videoId.form-control(type='text', name="videoId", value= values ? values.videoId : '', placeholder='Enter video ID', required)
            span(style="color: #f44336")= errors ? errors[2] : '' 

        button.btn.btn-primary(type='submit') Add
    