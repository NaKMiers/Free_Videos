extends ../layouts/main

block content
    h1 Add New Video
    a.float-right.mr-4(href="/admin/videos") Videos
    form(method="POST")
        .form-group
            label.title-login(for='title') Title
            input#title.form-control(type='text', name="title", placeholder='Enter title', required)
        .form-group
            label.title-login(for='description') Description
            input#description.form-control(type='text', name="description", placeholder='Enter description', required)
        .form-group
            label.title-login(for='videoId') Video ID
            input#videoId.form-control(type='text', name="videoId", placeholder='Enter video ID', required)

        button.btn.btn-primary(type='submit') Add
