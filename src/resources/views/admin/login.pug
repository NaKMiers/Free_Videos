extends ../layouts/main

block content
    h1 Admin Login
    form(method="POST")
        .form-group
            label.title-login(for='username') Username
            input#username.form-control(type='text', value=values ? values.adminUsername : '', name="adminUsername", placeholder='Enter username', required)
            span.error-message= errors ? errors[0] : ''
        .form-group
            label.title-login(for='password') Password
            input#password.form-control(type='password', value=values ? values.adminPassword : '', name="adminPassword", placeholder='Enter password', required)
            span.error-message= errors ? errors[1] : ''
        button.btn.btn-primary(type='submit') Login
